{
	"compilerOptions": {
		"target": "es2022", 
		"module": "nodenext",
		"sourceMap": false, 
		"outDir": "dist", 
		"rootDir": "src",
		"baseUrl": ".", 
		"esModuleInterop": true, 
		"strict": true, 
		"skipLibCheck": true, 
		"paths": {
			"@/*": ["src/*"] 
		}
	},
	"ts-node": {
		"transpileOnly": true, 
		"require": ["tsconfig-paths/register"] 
	},
	"include": ["src/**/*"], 
	"exclude": ["node_modules"] 
}
