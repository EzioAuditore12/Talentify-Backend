{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "./dist",
		"rootDir": ".",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,

		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": ["."],
	"exclude": ["node_modules"]
}
